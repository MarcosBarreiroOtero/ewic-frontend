<html t:type="layout" title="appName"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">


<div class="row justify-content-center">
	<div class="col-md-6">
		<div class="card">
			<div class="card-header text-center primary-color">
				<h4 class="accessOption">
					<strong>${message:login}</strong>
				</h4>
			</div>
			<div class="card-body">
				<t:form t:id="loginForm" t:async="true">
					<div class="form-group row">
						<div class="col-md-12">
							<t:alerts showDismissAll="false" />
						</div>
					</div>

					<div class="form-group row justify-content-center">
						<div class="col-md-10">
							<div class="input-field s10">
								<i class="material-icons prefix"> <span
									class="glyphicon glyphicon-user icon-primary-color"></span></i> <input
									t:type="TextField" t:id="username" type="text" id="username"
									class="form-control" required="true" autofocus="true" /><label
									for="username">${message:username}</label>
							</div>
						</div>
					</div>

					<div class="form-group row justify-content-center">
						<div class="col-md-10">
							<div class="input-field s10">
								<i class="material-icons prefix"> <span
									class="glyphicon glyphicon-lock icon-primary-color"></span></i> <input
									t:type="TextField" t:id="password" type="password"
									id="password" class="form-control" required="true" /><label
									for="password">${message:password}</label>
							</div>
						</div>
					</div>

					<div class=" row justify-content-center">
						<div class="col-md-10" style="text-align: center">
							<button class="btn waves-effect waves-light primary-color"
								type="submit" name="action">
								<strong>${message:login}</strong> <i
									class="glyphicon glyphicon-log-in" style="margin-left: 10px;"></i>
							</button>
						</div>

					</div>
				</t:form>
			</div>
		</div>
	</div>
</div>

</html>
